<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_layout"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:letterSpacing="0.1"
                android:text="Laporan Keuangan"
                android:textAlignment="center"
                android:textColor="#E1DFDF"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_loginpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_image"
            android:layout_marginTop="56dp"
            android:background="@drawable/square_login_page">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="41dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_login"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/up_arrow_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reg"
                            android:layout_width="268dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="7dp"
                            android:text="Registrasi"
                            android:textAlignment="viewStart"
                            android:textColor="#4D4D4D"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            android:text="Avatar"
                            android:textColor="#4D4D4D"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/upload"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hapticFeedbackEnabled="false"
                        android:text="Upload"
                        app:icon="@drawable/ic_baseline_add_a_photo_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Name"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/square_edit_text"
                        android:drawableLeft="@drawable/user_1"
                        android:drawablePadding="10dp"
                        android:hint="Your Name"
                        android:paddingLeft="20dp"
                        android:textColorHint="#252525"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Username"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:autoText="false"
                        android:background="@drawable/square_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                        android:drawablePadding="10dp"
                        android:hint="Username"
                        android:paddingLeft="20dp"
                        android:textColorHint="#2C2C2C"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Password"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/square_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                        android:drawablePadding="10dp"
                        android:hint="******"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:textColorHint="#333333"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="18dp"-->
                <!--                    android:orientation="vertical">-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/tv_alamat"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginLeft="10dp"-->
                <!--                        android:layout_marginBottom="7dp"-->
                <!--                        android:text="Password"-->
                <!--                        android:textColor="#4D4D4D"-->
                <!--                        android:textSize="14sp" />-->

                <!--                    <EditText-->
                <!--                        android:drawableLeft="@drawable/ic_baseline_add_location_24"-->
                <!--                        android:drawablePadding="10dp"-->
                <!--                        android:id="@+id/et_alamat"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="35dp"-->
                <!--                        android:background="@drawable/square_edit_text"-->
                <!--                        android:hint="Alamat"-->
                <!--                        android:inputType="text"-->
                <!--                        android:paddingLeft="20dp"-->
                <!--                        android:textColorHint="#000000"-->
                <!--                        android:textSize="14sp" />-->
                <!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Location"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_loc"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/square_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:hint="Your Location"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:textColorHint="#4A4A4A"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/button_square"
                    android:text="Register"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>